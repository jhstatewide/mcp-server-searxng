{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": ".",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true
    },
    "include": [
      "src/**/*.ts"
    ]
}
